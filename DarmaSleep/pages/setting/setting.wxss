/* setting.wxss */

.container {
  padding: 50rpx 0;
}

.headView {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.headImgView {
  width: 200rpx;
  height: 200rpx;
  margin: 0rpx;
  border-radius: 50%;
}

.nickname {
  margin-top: 20rpx;
  color: #aaa;
}

.list {
  margin: 50rpx 0;
}

.list-item {
  margin: auto;
  width: auto;
  padding: 40rpx 30rpx;
  display: flex;
  position: relative;
  align-items: center;
}
.list-item::before {
  content: " ";
  position: absolute;
  height: 1rpx;
  border-top: 1rpx solid #D8D8D8;
  color: #D8D8D8;
  left: 0;
  top: 0;
  right: 0;
}
.list-item::after {
  content: " ";
  position: absolute;
  height: 1rpx;
  border-top: 1rpx solid #D8D8D8;
  color: #D8D8D8;
  left: 0;
  bottom: 0;
  right: 0;
}
 .list-item:first-child:after {
  display: none;
} 

.item-title {
  width: 100%;
  height: 100%;
  font-size: 35rpx;
}

.arrow {
  padding-right: 26rpx;
  position: relative;
}

.arrow::after {
  content: "";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -9rpx;
  right: 28rpx;
}