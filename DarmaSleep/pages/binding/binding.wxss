/* pages/binding/binding.wxss */

.container {
  background-color: white;
}

.binding-state-img {
  width: 700rpx;
  height: 250rpx;
  margin-top: 100rpx;
}

.binding-state {
  font-size: 34rpx;
  color: #8d9693;
  font-weight: 200;
}

.unbinding-view, .binding-view {
  margin-top: 100rpx;
  text-align: center;
  width: 100%;
}

.binding-view {
  margin-top: 200rpx;
}

.input-button, .unbinding-button {
  margin: 50rpx 70rpx;
  background-color: #42c1a7;
  border-radius: 50rpx;
  color: white;
  font-size: 34rpx;
  font-weight: 200;
}

.unbinding-button {
  margin-top: 10rpx;
}

.or-label {
  color: #8d9693;
  font-size: 28rpx;
  font-weight: 200;
}

.scan-view {
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.scan-view label {
  color: #8d9693;
  font-size: 34rpx;
}

.scan-view image {
  width: 80rpx;
  height: 80rpx;
}

.binding-view label {
  color: #8d9693;
  font-size: 34rpx;
  font-weight: 200;
}

.disappear {
  display: none;
}

/* 弹窗 */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 20rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 20rpx 32rpx;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}
